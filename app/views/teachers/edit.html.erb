<h1 class="text-center">
  <%= current_user.name %>
</h1>
<h3 class="text-center">Edit Profile</h3>
<div class="col-md-6 col-md-offset-3">
  <%= form_with(model: @teacher,
                url: teacher_path(@teacher), method: :patch) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>

    <%= f.label :email %>
    <%= f.email_field :email, class: 'form_control' %>

    <%= f.label :password %>
    <%= f.password_field :password, class: 'form_control' %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: 'form_control' %>
    
    <div class="text-center">
      <%= f.submit "Update Profile", class: 'btn btn-primary btn_short' %>
    </div>
  <% end %>
</div>
