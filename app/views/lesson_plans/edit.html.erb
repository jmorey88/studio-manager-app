<h1 class="text-center">
  <%= "#{@lesson_plan.title}" %>
</h1>
<h3 class="text-center">Edit Lesson</h3>
<div class="col-md-6 col-md-offset-3">
  <%= form_with(model: @lesson_plan, url: lesson_plan_path(@lesson_plan), method: :patch, local: true) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>

    <%= f.label :body %>
    <%= f.text_area :body, class: 'form_control', rows: 5 %>

    <div class="text-center">
      <%= f.submit "Update Lesson", class: "btn btn-primary btn_short" %>
    </div>
  <% end %>
</div>
