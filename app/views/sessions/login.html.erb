<h1 class="text-center">Login</h1>

<div class="col-md-6 col-md-offset-3">
  <%= form_with(url: login_path, scope: :session) do |f| %>

    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control', value: params[:email] %>

    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-contorl',
                                    value: params[:password] %>

    <div class="text-center">
      <%= f.submit "Log in ", class: "btn btn-primary btn_short" %>
    </div>
  <% end %>

  <p class="text-center">New user? <%= link_to "Sign up now!", signup_path  %></p>
</div>
